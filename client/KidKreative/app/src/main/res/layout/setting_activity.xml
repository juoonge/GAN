<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/setting_background">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="7dp">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back_btn_blue"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="[설정]"
            android:textSize="66dp"
            android:fontFamily="@font/typo_crayon_l"
            android:textColor="@color/setting"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="100dp">
            <ImageButton
                android:id="@+id/nicknameChangeBtn"
                android:layout_width="460dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:background="@drawable/setting_nickname_change_btn"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="닉네임 변경"
                android:textColor="@color/pink"
                android:fontFamily="@font/typo_crayon_b"
                android:textSize="60dp"
                android:layout_alignLeft="@+id/nicknameChangeBtn"
                android:layout_alignTop="@+id/nicknameChangeBtn"
                android:layout_alignRight="@+id/nicknameChangeBtn"
                android:layout_alignBottom="@+id/nicknameChangeBtn"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="50dp">
            <ImageButton
                android:id="@+id/logoutBtn"
                android:layout_width="460dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:background="@drawable/setting_logout_btn"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="로그아웃"
                android:textColor="@color/blue"
                android:fontFamily="@font/typo_crayon_b"
                android:textSize="60dp"
                android:layout_alignLeft="@+id/logoutBtn"
                android:layout_alignTop="@+id/logoutBtn"
                android:layout_alignRight="@+id/logoutBtn"
                android:layout_alignBottom="@+id/logoutBtn"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>