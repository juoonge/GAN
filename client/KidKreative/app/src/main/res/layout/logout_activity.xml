<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/setting_background">


    <LinearLayout
        android:layout_width="800dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/logout_rec"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="280dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그아웃 하시겠습니까?"
                android:textSize="42dp"
                android:fontFamily="@font/typo_crayon_l"
                android:textColor="@color/logout_blue">
            </TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="40dp">
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/okBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/logout_blue_btn"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="예"
                    android:textColor="@color/white"
                    android:fontFamily="@font/typo_crayon_l"
                    android:textSize="38dp"
                    android:layout_alignLeft="@+id/okBtn"
                    android:layout_alignTop="@+id/okBtn"
                    android:layout_alignRight="@+id/okBtn"
                    android:layout_alignBottom="@+id/okBtn"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginLeft="100dp">
                <ImageButton
                    android:id="@+id/cancelBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/logout_blue_btn"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="아니요"
                    android:textColor="@color/white"
                    android:fontFamily="@font/typo_crayon_l"
                    android:textSize="38dp"
                    android:layout_alignLeft="@+id/cancelBtn"
                    android:layout_alignTop="@+id/cancelBtn"
                    android:layout_alignRight="@+id/cancelBtn"
                    android:layout_alignBottom="@+id/cancelBtn"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
