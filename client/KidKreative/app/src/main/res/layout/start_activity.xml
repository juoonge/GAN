<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="60dp"
    android:background="@drawable/forest_with_aimal_background"
    >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp">

        <ImageView
            android:layout_marginLeft="150dp"
            android:id="@+id/loginBtn"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:src="@drawable/login_btn"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:layout_marginLeft="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/loginBtn"
            android:layout_alignTop="@+id/loginBtn"
            android:layout_alignRight="@+id/loginBtn"
            android:layout_alignBottom="@+id/loginBtn"
            android:gravity="center"
            android:text="로그인"
            android:textSize="90dp"
            android:layout_alignParentLeft="true"
            android:textColor="@color/green"
            android:fontFamily="@font/typo_crayon_b"/>

        <ImageView
            android:layout_marginRight="150dp"
            android:id="@+id/signupBtn"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/join_btn"
            />

        <TextView
            android:layout_marginRight="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/signupBtn"
            android:layout_alignTop="@+id/signupBtn"
            android:layout_alignRight="@+id/signupBtn"
            android:layout_alignBottom="@+id/signupBtn"
            android:gravity="center"
            android:text="회원가입"
            android:textSize="90dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/orange"
            android:fontFamily="@font/typo_crayon_b"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

    </LinearLayout>
</LinearLayout>